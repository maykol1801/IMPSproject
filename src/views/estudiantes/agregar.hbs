<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
       <div class="col-md-4">
        <form action="/estudiantes/agregar" method="POST">
        <div class="form-group">
                <input type="text" class="form-control" name="idestudiante" placeholder="Codigo del estudiante" autofocus />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="nombre" placeholder="Nombre del estudiante" autofocus />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="apellido" placeholder="Apellido del estudiante" />
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Correo del estudiante" />
            </div>
            <div class="form-group">
                <select class="form-control" name="idcarrera">
                    {{#each lstCarreras}}
                    <option value="{{idcarrera}}">{{carrera}}</option>
                     {{/each}}
                </select>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="usuario" placeholder="Usuario del estudiante" />
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Guardar</button>
            </div>
        </form>
       </div>
    </div>
</div>